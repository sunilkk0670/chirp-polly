{
    "french_a2_modules": [
        {
            "theme": "Past Tense & Daily Activities",
            "order": 1,
            "lessons": [
                {
                    "targetText": "J'ai mangé",
                    "phoneticTranscription": "zhay mon-zhay",
                    "english": "I ate / I have eaten",
                    "radicalBreakdown": "j'ai (I have) + mangé (eaten) - passé composé with avoir"
                },
                {
                    "targetText": "Je suis allé",
                    "phoneticTranscription": "zhuh swee za-lay",
                    "english": "I went / I have gone",
                    "radicalBreakdown": "je suis (I am) + allé (gone) - passé composé with être"
                },
                {
                    "targetText": "J'ai travaillé",
                    "phoneticTranscription": "zhay tra-va-yay",
                    "english": "I worked / I have worked",
                    "radicalBreakdown": "j'ai (I have) + travaillé (worked)"
                },
                {
                    "targetText": "J'ai dormi",
                    "phoneticTranscription": "zhay dor-mee",
                    "english": "I slept / I have slept",
                    "radicalBreakdown": "j'ai (I have) + dormi (slept)"
                },
                {
                    "targetText": "Je suis resté",
                    "phoneticTranscription": "zhuh swee res-tay",
                    "english": "I stayed / I have stayed",
                    "radicalBreakdown": "je suis (I am) + resté (stayed) - uses être"
                }
            ],
            "liarGameData": {
                "trap": "J'ai allé (using avoir with aller)",
                "correctVersion": "Je suis allé (aller uses être, not avoir)",
                "explanation": "In French passé composé, most verbs use 'avoir', but movement verbs like aller, venir, partir use 'être'. Remember DR & MRS VANDERTRAMP for être verbs!"
            }
        },
        {
