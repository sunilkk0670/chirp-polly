                },
                {
                    "targetText": "Petit",
                    "phoneticTranscription": "puh-tee",
                    "english": "Small (masculine)",
                    "radicalBreakdown": "Adjective - feminine: petite"
                },
                {
                    "targetText": "Beau",
                    "phoneticTranscription": "bo",
                    "english": "Beautiful / Handsome (masculine)",
                    "radicalBreakdown": "Irregular adjective - feminine: belle, plural: beaux"
                },
                {
                    "targetText": "Intelligent",
                    "phoneticTranscription": "an-tel-ee-zhon",
                    "english": "Intelligent (masculine)",
                    "radicalBreakdown": "Adjective - add 'e' for feminine: intelligente"
                },
                {
                    "targetText": "Sympa",
                    "phoneticTranscription": "sam-pa",
                    "english": "Nice / Friendly",
                    "radicalBreakdown": "Short for sympathique - invariable in gender"
                }
            ],
            "liarGameData": {
                "trap": "Une beau femme (using masculine form with feminine noun)",
                "correctVersion": "Une belle femme (belle is the feminine form)",
                "explanation": "The adjective 'beau' changes to 'belle' for feminine nouns. Also, before a vowel, use 'bel' (un bel homme)."
            }
        },
