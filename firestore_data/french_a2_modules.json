                },
                {
                    "targetText": "Du pain",
                    "phoneticTranscription": "doo pan",
                    "english": "Some bread",
                    "radicalBreakdown": "du (some - masculine) + pain (bread)"
                },
                {
                    "targetText": "De la viande",
                    "phoneticTranscription": "duh la vee-ond",
                    "english": "Some meat",
                    "radicalBreakdown": "de la (some - feminine) + viande (meat)"
                }
            ],
            "liarGameData": {
                "trap": "Je veux l'addition (using 'veux' instead of 'voudrais')",
                "correctVersion": "Je voudrais l'addition (conditional is more polite)",
                "explanation": "'Je veux' (I want) sounds demanding. Use 'Je voudrais' (I would like) for polite requests in French."
            }
