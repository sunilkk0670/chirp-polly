{
    "hindi_a2_modules": [
        {
            "theme": "Past Tense Verbs",
            "order": 1,
            "lessons": [
                {
                    "targetText": "मैंने खाया",
                    "phoneticTranscription": "maine khaya",
                    "english": "I ate (masculine)",
                    "radicalBreakdown": "मैंने (I - ergative) + खाया (ate - masculine past)"
                },
                {
                    "targetText": "मैंने पिया",
                    "phoneticTranscription": "maine piya",
                    "english": "I drank (masculine)",
                    "radicalBreakdown": "मैंने (I - ergative) + पिया (drank - masculine past)"
                },
                {
                    "targetText": "मैं गया",
                    "phoneticTranscription": "main gaya",
                    "english": "I went (masculine)",
                    "radicalBreakdown": "मैं (I) + गया (went - masculine past, no ergative)"
                },
                {
                    "targetText": "मैं आया",
                    "phoneticTranscription": "main aaya",
                    "english": "I came (masculine)",
                    "radicalBreakdown": "मैं (I) + आया (came - masculine past)"
                },
                {
                    "targetText": "मैंने देखा",
                    "phoneticTranscription": "maine dekha",
                    "english": "I saw (masculine)",
                    "radicalBreakdown": "मैंने (I - ergative) + देखा (saw - masculine past)"
                }
            ],
            "liarGameData": {
                "trap": "मैंने गया (using ergative 'ne' with intransitive verb 'gaya')",
                "correctVersion": "मैं गया (intransitive verbs don't use 'ne')",
                "explanation": "In Hindi past tense, transitive verbs (खाना, पीना, देखना) use ergative 'ने', but intransitive verbs (जाना, आना) don't. This is a key grammar rule!"
            }
        },
        {
            "theme": "Future Tense & Plans",
            "order": 2,
            "lessons": [
                {
                    "targetText": "मैं जाऊंगा",
                    "phoneticTranscription": "main jaunga",
                    "english": "I will go (masculine)",
                    "radicalBreakdown": "मैं (I) + जाऊंगा (will go - masculine future)"
                },
                {
                    "targetText": "मैं करूंगा",
                    "phoneticTranscription": "main karunga",
                    "english": "I will do (masculine)",
                    "radicalBreakdown": "मैं (I) + करूंगा (will do - masculine future)"
                },
                {
                    "targetText": "तुम आओगे",
                    "phoneticTranscription": "tum aaoge",
                    "english": "You will come (informal, masculine)",
                    "radicalBreakdown": "तुम (you) + आओगे (will come - masculine future)"
                },
                {
                    "targetText": "वह खाएगा",
                    "phoneticTranscription": "vah khaega",
                    "english": "He will eat",
                    "radicalBreakdown": "वह (he) + खाएगा (will eat - masculine future)"
                },
                {
                    "targetText": "कल",
                    "phoneticTranscription": "kal",
                    "english": "Tomorrow / Yesterday",
                    "radicalBreakdown": "Context determines if it means tomorrow or yesterday"
                }
            ],
            "liarGameData": {
                "trap": "मैं जाऊंगी (masculine speaker using feminine ending)",
                "correctVersion": "मैं जाऊंगा (masculine) or मैं जाऊंगी (feminine)",
                "explanation": "Future tense endings must match the speaker's gender: -गा/-गे for masculine, -गी for feminine. Choose based on who is speaking!"
            }
        },
        {
