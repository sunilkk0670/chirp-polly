            "order": 3,
            "lessons": [
                {
                    "targetText": "बड़ा",
                    "phoneticTranscription": "bada",
                    "english": "Big (masculine)",
                    "radicalBreakdown": "Adjective - feminine: बड़ी (badi)"
                },
                {
                    "targetText": "छोटा",
                    "phoneticTranscription": "chhota",
                    "english": "Small (masculine)",
                    "radicalBreakdown": "Adjective - feminine: छोटी (chhoti)"
                },
                {
                    "targetText": "अच्छा",
                    "phoneticTranscription": "accha",
                    "english": "Good (masculine)",
                    "radicalBreakdown": "Adjective - feminine: अच्छी (acchi)"
                },
                {
                    "targetText": "सुंदर",
                    "phoneticTranscription": "sundar",
                    "english": "Beautiful",
                    "radicalBreakdown": "Invariable adjective - same for all genders"
                },
                {
                    "targetText": "नया",
                    "phoneticTranscription": "naya",
                    "english": "New (masculine)",
                    "radicalBreakdown": "Adjective - feminine: नई (nayi)"
                }
            ],
            "liarGameData": {
                "trap": "बड़ा लड़की (using masculine adjective with feminine noun)",
                "correctVersion": "बड़ी लड़की (adjective must match noun gender)",
                "explanation": "Hindi adjectives ending in -आ change to -ई for feminine nouns. Always match the adjective to the noun's gender!"
            }
        },
        {
            "theme": "Postpositions & Location",
            "order": 4,
            "lessons": [
                {
                    "targetText": "में",
                    "phoneticTranscription": "mein",
                    "english": "In / Inside",
                    "radicalBreakdown": "Postposition for location inside"
                },
                {
                    "targetText": "पर",
                    "phoneticTranscription": "par",
                    "english": "On / At",
                    "radicalBreakdown": "Postposition for surface or location"
                },
                {
                    "targetText": "के पास",
                    "phoneticTranscription": "ke paas",
                    "english": "Near / Next to",
                    "radicalBreakdown": "के (of) + पास (near)"
                },
                {
                    "targetText": "के साथ",
                    "phoneticTranscription": "ke saath",
                    "english": "With",
                    "radicalBreakdown": "के (of) + साथ (together)"
                },
                {
                    "targetText": "से",
                    "phoneticTranscription": "se",
                    "english": "From / With (instrumental)",
                    "radicalBreakdown": "Postposition for source or instrument"
                }
            ],
            "liarGameData": {
                "trap": "मैं घर में हूं (correct) vs मैं में घर हूं (wrong word order)",
                "correctVersion": "मैं घर में हूं (I am in the house)",
                "explanation": "In Hindi, postpositions come AFTER the noun (घर में), not before like English prepositions (in house). Word order matters!"
            }
        },
