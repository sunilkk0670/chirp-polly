            "order": 5,
            "lessons": [
                {
                    "targetText": "是",
                    "phoneticTranscription": "shì",
                    "english": "to be / is / am / are",
                    "radicalBreakdown": "日 (sun) + 正 (correct)"
                },
                {
                    "targetText": "有",
                    "phoneticTranscription": "yǒu",
                    "english": "to have / there is",
                    "radicalBreakdown": "月 (moon) + hand radical"
                },
                {
                    "targetText": "吃",
                    "phoneticTranscription": "chī",
                    "english": "to eat",
                    "radicalBreakdown": "口 (mouth) + 乞 (beg)"
                },
                {
                    "targetText": "喝",
                    "phoneticTranscription": "hē",
                    "english": "to drink",
                    "radicalBreakdown": "口 (mouth) + 曷 (why/how)"
                },
                {
                    "targetText": "去",
                    "phoneticTranscription": "qù",
                    "english": "to go",
                    "radicalBreakdown": "土 (earth) + 厶 (private)"
                }
            ],
            "liarGameData": {
                "trap": "我是有书 (using 是 instead of 有 for possession)",
                "correctVersion": "我有书 (use 有 yǒu for 'have', not 是 shì)",
                "explanation": "是 (shì) means 'to be' for identity. 有 (yǒu) means 'to have'. Don't say 我是有, say 我有!"
            }
        }
    ]
}