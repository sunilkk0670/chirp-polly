{
    "chinese_a1_modules": [
        {
            "theme": "Pinyin & Basic Greetings",
            "order": 1,
            "lessons": [
                {
                    "targetText": "你好",
                    "phoneticTranscription": "nǐ hǎo",
                    "english": "Hello",
                    "radicalBreakdown": "你 (you) + 好 (good)"
                },
                {
                    "targetText": "谢谢",
                    "phoneticTranscription": "xièxie",
                    "english": "Thank you",
                    "radicalBreakdown": "谢 (thanks) repeated for emphasis"
                },
                {
                    "targetText": "再见",
                    "phoneticTranscription": "zàijiàn",
                    "english": "Goodbye",
                    "radicalBreakdown": "再 (again) + 见 (see)"
                },
                {
                    "targetText": "对不起",
                    "phoneticTranscription": "duìbuqǐ",
                    "english": "Sorry",
                    "radicalBreakdown": "对 (correct) + 不起 (cannot rise to)"
                },
                {
                    "targetText": "不客气",
                    "phoneticTranscription": "bú kèqi",
                    "english": "You're welcome",
                    "radicalBreakdown": "不 (not) + 客气 (polite/courteous)"
                }
            ],
            "liarGameData": {
                "trap": "ni hao (missing tone marks in pinyin)",
                "correctVersion": "nǐ hǎo (must include tone marks: 3rd tone + 3rd tone)",
                "explanation": "Pinyin without tones is incomplete! 你好 is nǐ hǎo (both 3rd tone), not 'ni hao'. Tones change meaning!"
            }
        },
        {
