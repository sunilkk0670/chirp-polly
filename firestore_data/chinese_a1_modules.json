            "order": 2,
            "lessons": [
                {
                    "targetText": "一",
                    "phoneticTranscription": "yī",
                    "english": "one",
                    "radicalBreakdown": "Single horizontal stroke"
                },
                {
                    "targetText": "二",
                    "phoneticTranscription": "èr",
                    "english": "two",
                    "radicalBreakdown": "Two horizontal strokes"
                },
                {
                    "targetText": "三",
                    "phoneticTranscription": "sān",
                    "english": "three",
                    "radicalBreakdown": "Three horizontal strokes"
                },
                {
                    "targetText": "四",
                    "phoneticTranscription": "sì",
                    "english": "four",
                    "radicalBreakdown": "囗 (enclosure) + 儿 (legs)"
                },
                {
                    "targetText": "五",
                    "phoneticTranscription": "wǔ",
                    "english": "five",
                    "radicalBreakdown": "二 (two) + 儿 (legs) crossing"
                }
            ],
            "liarGameData": {
                "trap": "二个苹果 (using 二 with measure word)",
                "correctVersion": "两个苹果 (use 两 liǎng, not 二 èr, when counting with measure words)",
                "explanation": "When counting objects with measure words (个, 本, etc.), use 两 (liǎng) for 'two', not 二 (èr)!"
            }
        },
        {
            "theme": "Measure Words",
            "order": 3,
            "lessons": [
                {
                    "targetText": "个",
                    "phoneticTranscription": "gè",
                    "english": "general measure word",
                    "radicalBreakdown": "人 (person) + 固 - most common counter"
                },
                {
                    "targetText": "本",
                    "phoneticTranscription": "běn",
                    "english": "measure word for books",
                    "radicalBreakdown": "木 (tree/wood) - for bound items"
                },
                {
                    "targetText": "杯",
                    "phoneticTranscription": "bēi",
                    "english": "measure word for cups",
                    "radicalBreakdown": "木 (wood) + 不 - cup/glass counter"
                },
                {
                    "targetText": "张",
                    "phoneticTranscription": "zhāng",
                    "english": "measure word for flat objects",
                    "radicalBreakdown": "弓 (bow) + 长 - for paper, tables, etc."
                },
                {
                    "targetText": "只",
                    "phoneticTranscription": "zhī",
                    "english": "measure word for animals",
                    "radicalBreakdown": "口 (mouth) + 隹 (bird) - for animals"
                }
            ],
            "liarGameData": {
                "trap": "一书 (missing measure word)",
                "correctVersion": "一本书 (must include measure word 本 between number and noun)",
                "explanation": "In Chinese, you MUST use a measure word between numbers and nouns. It's 一本书, not 一书!"
            }
        },
        {
