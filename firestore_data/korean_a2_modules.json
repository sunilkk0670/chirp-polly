                },
                {
                    "targetText": "에서",
                    "phoneticTranscription": "eseo",
                    "english": "at/in (action location marker)",
                    "radicalBreakdown": "에 (at) + 서 (from) - marks action location"
                }
            ],
            "liarGameData": {
                "trap": "저가 학생이에요 (using subject marker for topic)",
