rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.admin == true;
    }
    
    // ============================================
    // CURRICULUM DATA - TEMPORARY PUBLIC READ FOR DEVELOPMENT
    // ============================================
    
    // Languages collection - PUBLIC READ (temporary for development)
    match /languages/{languageId} {
      // TEMPORARY: Allow public read for development
      allow read: if true;
      
      // Only admins can write (create, update, delete)
      allow write: if isAdmin();
      
      // Levels sub-collection
      match /levels/{levelId} {
        // TEMPORARY: Allow public read for development
        allow read: if true;
        
        // Only admins can write
        allow write: if isAdmin();
        
        // Modules sub-collection
        match /modules/{moduleId} {
          // TEMPORARY: Allow public read for development
          allow read: if true;
          
          // Only admins can write
          allow write: if isAdmin();
        }
      }
    }
    
    // ============================================
    // METADATA - Admin only
    // ============================================
    
    match /metadata/{document=**} {
      // Only admins can read/write metadata
      allow read, write: if isAdmin();
    }
    
    // ============================================
    // USER PROGRESS - Users can read/write their own data
    // ============================================
    
    match /users/{userId} {
      // Users can read their own data
      allow read: if isAuthenticated() && request.auth.uid == userId;
      
      // Users can write their own data
      allow write: if isAuthenticated() && request.auth.uid == userId;
      
      // User progress sub-collections
      match /progress/{document=**} {
        allow read: if isAuthenticated() && request.auth.uid == userId;
        allow write: if isAuthenticated() && request.auth.uid == userId;
      }
      
      match /achievements/{document=**} {
        allow read: if isAuthenticated() && request.auth.uid == userId;
        allow write: if isAuthenticated() && request.auth.uid == userId;
      }
    }
    
    // ============================================
    // DENY ALL OTHER ACCESS
    // ============================================
    
    // Explicitly deny access to any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
